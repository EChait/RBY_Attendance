@using School.Models
@model NewStudentViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" runat="server">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" runat="server" href="https://site-assets.fontawesome.com/releases/v5.15.4/css/all.css">
    <link href="../css/create_subject.css" rel="stylesheet" runat="server" />
</head>
<body>
    <div class='containerDiv'>
        <div class="createDiv container" style="background-color: lightgray; padding: 50px; border-radius: 20px;">
            <div class="labelDiv">CREATE NEW STUDENT</div>
            <div class="row fs-2">
                <div style="display:flex">
                    <div class="col-3">
                        <div class="d-flex justify-content-end">
                            <span>New Studnet:</span>
                        </div>
                    </div>
                    <div class="col-9 justify-content" >
                        <input type="text" placeholder="First Name" id="newFirstName" />
                        <input type="text" placeholder="Last Name" id="newLastName"/>
                    </div>
                </div>
                <div style="display:flex;margin-top:20px">
                    <div class="col-3">
                        <div class="d-flex justify-content-end">
                            <span >School Email:</span>
                        </div>
                    </div>
                    <div class="col-9">
                        <input type="text" style="width:100%" id="newSchoolEmail" placeholder="Input School Email"/>
                    </div>
                </div>
                <div class="col-12 mt-2">
                    <span >Subjects:</span>
                </div>
                <div class="col-12 mt-2">
                    <div class="d-flex flex-wrap align-items-center">
                        @foreach(var item in Model.studentForms)
                        {
                            <div class="itemDiv">
                                <input type="radio" class="form-check-input123" id=@Html.DisplayFor(modelItem => item.subjectId) name="optradio" value=@Html.DisplayFor(modelItem => item.teacherId)>
                                <div style="margin-left:15px !important">
                                    <div>
                                        @Html.DisplayFor(modelItem => item.subjectName)
                                    </div>
                                    <div style="color: gray; font-size: 15px;">
                                        @Html.DisplayFor(modelItem => item.teacherName)
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-5">
                    <button type="button" id="btnAddnewStudent">Add</button>
                </div>
            </div>
        </div>
    </div>
</body>
