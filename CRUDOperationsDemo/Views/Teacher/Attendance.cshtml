@using CRUDOperationsDemo.Models
@using School.Models
@model AttendanceViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<head>
  <title>Attendance</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="../css/take_attendance.css" rel="stylesheet" runat="server" />
</head>
<body>
        <div class="container mt-5">
            <div class="row fs-2">
                <div class="col-12">
                    <div class="d-flex justify-content-center align-items-center">
                        <img src="../images/logo.png" />
                    </div>
                </div>
                <div class="col-5">
                    <div class="d-flex justify-content-end">
                        <span style="color: red;">Teacher Name:</span>
                    </div>
                </div>
                <div class="col-7">
                    <label class="attName" id=@Model.teacherId>@Model.teacherName</label>
                </div>
                <div class="col-5 mt-3">
                    <div class="d-flex justify-content-end">
                        <span style="color: red;">Subject:</span>
                    </div>
                </div>
                <div class="col-7 mt-3">
                    <select id="attendance" class="form-select" aria-label="Input Subject">
                    @foreach(var item in Model.subjects)
                        {
                            <option id=@Html.DisplayFor(modelItem => item.Id)>@Html.DisplayFor(modelItem => item.Name)</option>
                        }
                    </select>
                </div>
                <div class="col-5 mt-3">
                    <div class="d-flex justify-content-end">
                        <span style="color: red;">Period:</span>
                    </div>
                </div>
                <div class="col-7 mt-3">
                    <input type="text" id="attPeriod"/>
                </div>
                <div class="col-5 mt-3">
                    <div class="d-flex justify-content-end">
                        <span style="color: red;">Date:</span>
                    </div>
                </div>
                <div class="col-7 mt-3">
                    <input type="date" id="attendanceDate"/>
                </div>
                <div class="col-5">

                </div>
                <div class="col-7 mt-3">
                    <button type="button" id="btnTakeAttendance">Take ATTENDANCE</button>
                </div>
            </div>
        </div>
</body>
<style>

    .form-select {
        border-radius: 30px !important;
        min-width: 400px;
        outline: 1px solid gray !important;
        height: 40px;
        padding-left: 20px;
        border-radius: 30px;
        border: none;
        font-size: 20px;
        width: 50%;
    }
</style>